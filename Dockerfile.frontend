# Frontend: Streamlit
FROM python:3.10-slim

WORKDIR /app

# Copy only frontend code + requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY app/streamlit_app.py /app/streamlit_app.py

EXPOSE 10000

CMD ["streamlit", "run", "app/streamlit_app.py", "--server.port=10000", "--server.headless=true"]